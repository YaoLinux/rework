# Depends on: kf5-kio kf5-extra-cmake-modules libksane kf5-kdoctools

description="image Scanning Application for KDE"
url="http://www.kde.org/applications/graphics/skanlite"
packager="pierre at nutyx dot org"

name=skanlite
version=2.0.1
release=1

source=(http://download.kde.org/stable/$name/${version%.*}/$name-$version.tar.xz)

build() {
   mkdir build
   cd build
   cmake ../$name-$version      \
    -DCMAKE_BUILD_TYPE=Release  \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_TESTING=OFF
  make
  make DESTDIR=$PKG install
}
