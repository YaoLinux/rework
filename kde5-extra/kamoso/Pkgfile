# Depends on: purpose accounts-qml-module kf5-kconfig kf5-kdoctools kf5-kio kf5-kdeclarative kf5-ki18n kf5-extra-cmake-modules kf5-kdoctools boost python gstreamer-qt gstreamer-plugins-bad qt-quickcontrols

description="A webcam recorder from KDE community"
url="https://userbase.kde.org/Kamoso"
packager="pierre at nutyx dot org"

run=(purpose accounts-qml-module)

name=kamoso
version=3.2.4
release=2

source=(https://download.kde.org/stable/$name/${version%.*}/src/$name-$version.tar.xz)

build() {
  mkdir build
  cd build
  cmake ../$name-$version       \
    -DCMAKE_BUILD_TYPE=Release  \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib    \
    -DBUILD_TESTING=OFF 
  make
  make DESTDIR=$PKG install
}
