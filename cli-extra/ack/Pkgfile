description="A Perl-based grep replacement, aimed at programmers with large trees of heterogeneous source code"
url="http://beyondgrep.com/"
contributors="berlius"
packager="greg<greg@nutyx.org>"

#Depends on: perl-file-next

name=ack
version=2.18
release=1

source=(http://search.cpan.org/CPAN/authors/id/P/PE/PETDANCE/$name-$version.tar.gz)

build() {

	cd $name-$version
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make

	make test

}

package() {

	cd $name-$version
	make DESTDIR=$PKG install

}






