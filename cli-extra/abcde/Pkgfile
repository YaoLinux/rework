# Depends on: bash cd-discid wget libvorbis cdparanoia cdrtools flac id3lib lame mp3gain

description="a better cd encoder"
url="https://abcde.einval.com/"
packager="remy <remy@nutyx.org>"
contributors="Greg"

name=abcde
version=2.9.2
release=1

source=(https://abcde.einval.com/download/$name-$version.tar.gz)

prepare() {
   cd $name-$version
   sed -e "s:normalize-audio:normalize:g" -i $name
   sed -i 's/^#CDDBMETHOD=musicbrainz/CDDBMETHOD=cddb/' abcde.conf
}

build() {

cd $name-$version
    make DESTDIR=$PKG \
        prefix=/usr \
	sysconfdir=/etc \
	mandir=$PKG/usr/man/man1 \
        install
} 
        
