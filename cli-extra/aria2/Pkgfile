description="High speed download utility with resuming and segmented features."
url="http://aria2.sourceforge.net/"
contributors="berlius"
packager="greg<greg@nutyx.org>"

# Depends on:  gnutls gmp libxml2 c-ares libssh

name=aria2
version=1.32.0
release=1

source=(https://github.com/tatsuhiro-t/aria2/releases/download/release-$version/aria2-$version.tar.xz)

build() {

    cd $name-$version

    ./configure \
	   --prefix=/usr \
	   --mandir=$PKG/usr/man 

    make

}


package() {

    cd $name-$version
	make prefix=$PKG/usr install

    # add bash completion
    install -d $PKG/usr/share/bash-completion/completions
    install -m644 $PKG/usr/share/doc/aria2/bash_completion/aria2c \
		$PKG/usr/share/bash-completion/completions
		
    rm -rf $PKG/usr/share/doc/aria2/bash_completion
  
}
