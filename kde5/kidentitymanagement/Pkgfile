# Depends on : kf5-extra-cmake-modules python kf5-kdoctools kf5-kcompletion kf5-ktextwidgets kf5-kxmlgui kf5-kio kf5-kconfig kf5-kemoticons kf5-kcodecs kf5-kiconthemes kf5-kcoreaddons kpimtextedit

description="KDE PIM libraries"
url="https://projects.kde.org/projects/kde/pim/"
packager="pierre at nutyx dot org"
name=kidentitymanagement
version=17.04.2
release=1

source=( http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
  mkdir build
  cd build
  cmake ../$name-$version \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  make
  make DESTDIR=$PKG install
}
