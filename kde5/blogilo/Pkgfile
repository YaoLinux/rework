# Depends on : hicolor-icon-theme kblog kf5-ktexteditor libkgapi messagelib boost kf5-extra-cmake-modules kf5-kdoctools kf5-kdesignerplugin

description="A KDE blogging client"
url="https://projects.kde.org/blogilo"
packager="pierre at nutyx dot org"

name=blogilo
version=17.04.2
release=1

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
  mkdir -p build
  cd build
  cmake ../$name-$version \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -Wno-dev
  make
  make DESTDIR=$PKG install
}
