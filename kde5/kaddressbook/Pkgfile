# Depends on : boost kf5-extra-cmake-modules kf5-kdoctools kdepim-runtime kontactinterface mailcommon kf5-kdesignerplugin  

description="KDE contact manager"
url="https://projects.kde.org/kadressbook"
packager="pierre at nutyx dot org"

name=kaddressbook
version=17.04.2
release=1

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
  mkdir -p build
  cd build
  cmake ../$name-$version \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -Wno-dev
  make
  make DESTDIR=$PKG install
}
