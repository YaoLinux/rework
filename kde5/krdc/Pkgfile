# Depends on: kf5-extra-cmake-modules kf5-kcmutils kf5-kdnssd kf5-knotifyconfig kf5-kdoctools libvncserver python keditbookmarks freerdp

description="Remote Desktop Client"
url="https://kde.org/applications/internet/krdc/"
packager="pierre at nutyx dot org"

run=(freerdp libvncserver)

name=krdc
version=17.04.2
release=1

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
  cd $name-$version
  mkdir build
  cd    build
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release  \
        -DKDE_INSTALL_LIBDIR=lib    \
        -DBUILD_TESTING=OFF         \
        -Wno-dev ..
  make
  make DESTDIR=$PKG install
} 
