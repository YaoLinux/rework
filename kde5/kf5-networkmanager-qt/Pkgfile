# Depends on: kf5-extra-cmake-modules qt-base qt-networkauth networkmanager 

run=(networkmanager)
description="Qt wrapper for NetworkManager API "
url="https://www.kde.org/"
packager="pierre at nutyx dot org"
alias=(networkmanager-qt)


_name=networkmanager-qt
release=3

build() {
mkdir build
cd    build
cmake ../${_name}-$version        \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DKDE_INSTALL_LIBDIR=lib       \
      -DBUILD_TESTING=OFF
make
make DESTDIR=$PKG install
}

