# Depends on: kf5-extra-cmake-modules intltool python kaccounts-integration accounts-qml-module hicolor-icon-theme kdeconnect

description="Framework for providing abstractions to get the developer's purposes fulfilled"
url="https://www.kde.org/"
packager="pierre at nutyx dot org"

name=purpose
version=1.1
release=1

source=(http://download.kde.org/stable/$name/$name-$version.tar.xz)

build() {
  mkdir build
  cd build
  cmake ../$name-$version        \
    -DCMAKE_BUILD_TYPE=Release   \
    -DCMAKE_INSTALL_PREFIX=/usr  \
    -DKDE_INSTALL_LIBDIR=lib     \
    -DKDE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  make
  make DESTDIR=$PKG install
}
