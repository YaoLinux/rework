# Depends on: kf5-knotifyconfig kf5-kemoticons kf5-kparts kf5-kidletime qca-qt hicolor-icon-theme kf5-extra-cmake-modules kf5-kdoctools

description="A user friendly IRC client for KDE"
url="http://konversation.kde.org"
packager="pierre at nutyx dot org"
name=konversation
version=1.7.2
release=1

source=(http://download.kde.org/stable/$name/$version/src/$name-$version.tar.xz)

build() {
  mkdir build
  cd build
  cmake ../$name-$version       \
    -DCMAKE_BUILD_TYPE=Release  \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib
  make
  make DESTDIR=$PKG install
}
