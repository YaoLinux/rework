# Depends on: libpwquality kf5-kconfigwidgets kf5-kcoreaddons kf5-kdelibs4support kf5-ki18n kf5-kiconthemes kf5-kio kf5-kwidgetsaddons kf5-kcmutils

description="A simple system settings module to manage the users of your system "
url="https://www.kde.org/"
packager="pierre at nutyx dot org"
alias=(user-manager)

_name=user-manager
release=1

build() {
  cd ${_name}-$version
  mkdir build
  cd    build
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release    \
      -DKDE_INSTALL_LIBDIR=lib         \
      -DBUILD_TESTING=OFF           \
      -Wno-dev ..
  make
  make DESTDIR=$PKG install
}
