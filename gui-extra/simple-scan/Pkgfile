# Depends on: vala  gtk3 libgusb colord itstool sane dconf intltool xorg-libxcursor xorg-libxdamage xorg-libxrandr xorg-libxinerama

description="Simple scanning interface utility"
url="https://launchpad.net/simple-scan/"
packagers="pierre at nutyx dot org"

name=simple-scan
version=3.24.0
release=1

source=(https://launchpad.net/$name/${version:0:4}/$version/+download/$name-$version.tar.xz)

build() {
	cd $name-$version
	sed -i 's/--strict//' configure
	# Regenerate ui.c with packagekit disabled
	touch src/ui.vala
	./configure --prefix=/usr \
		--disable-schemas-compile \
		--disable-packagekit
	make
	make DESTDIR=$PKG install
}
