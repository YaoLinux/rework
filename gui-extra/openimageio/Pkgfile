# Depends on: cmake qt4 python boost mesa openexr jasper glew libtiff opencolorio

description="For reading and writing images, including classes, utilities, and applications"
url="http://www.openimageio.org/"
maintainer="tnut at nutyx dot org"

name=openimageio
version=1.6.14
release=2

PKGMK_KEEP_SOURCES="no"
source=(https://github.com/OpenImageIO/oiio/archive/release.zip)

build() {

cd oiio-release
mkdir build
cd build
cmake .. \
-DUSE_OPENSSL=ON \
-DCMAKE_INSTALL_PREFIX=/usr \
-DPYLIB_INSTALL_DIR=lib/python2.7/site-packages \
-DOIIO_BUILD_TESTS=ON \
-DOIIO_BUILD_TOOLS=ON

make DESTDIR=$PKG install
}
