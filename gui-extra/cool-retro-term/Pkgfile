#Depends on: qmltermwidget qt-quickcontrols qt-graphicaleffects 

description="A good looking terminal emulator which mimics the old cathode display"
url="https://github.com/Swordfish90/cool-retro-term"
packager="greg<greg@nutyx.org>"

name=cool-retro-term
version=1.0.0
release=1

source=(https://github.com/Swordfish90/$name/archive/v$version.tar.gz)

prepare() {

  cd $name-$version
  sed -i '/qmltermwidget/d' cool-retro-term.pro
  
}


build() {

  cd $name-$version
  qmake
  make
  
}

package() {

  cd $name-$version
  make INSTALL_ROOT=$PKG install

}
