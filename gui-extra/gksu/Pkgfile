# Depends on: xorg-libxau libgksu

description="A graphical frontend for su"
url="http://www.nongnu.org/gksu/index.html"
packager="SipoMatadorduCosmos"

name=gksu
version=2.0.2
release=1

source=(http://people.debian.org/~kov/gksu/$name-$version.tar.gz)


build() {
cd $name-$version
  sed -i -e 's|/usr/bin/x-terminal-emulator|-l gnome-terminal|g' gksu.desktop
  echo "TryExec=gnome-terminal" >> gksu.desktop
  ./configure --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-static \
    --disable-nautilus-extension
  make
  make DESTDIR=$PKG install
}
