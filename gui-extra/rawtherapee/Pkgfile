# Depends on: desktop-file-utils fftw glibmm gtk3 gtkmm hicolor-icontheme lcms2 lensfun cmake libcanberra libiptcdata
description="A powerful cross-platform raw image processing program" 
url="http://www.rawtherapee.com/" 
packager="indoo@nutyx.org" 
contributors=""

name=rawtherapee
version=5.3
release=1

source=("http://rawtherapee.com/shared/source/$name-$version.tar.xz" )

build() { 
mkdir -p "$SRC/$name-build"
  cd "$SRC/$name-build"

  cmake "$SRC/$name-$version" \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DCACHE_NAME_SUFFIX=""
  make
}
 
package() { 
cd "$SRC/$name-build"
  make DESTDIR=$PKG/ install
}
