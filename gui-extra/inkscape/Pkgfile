# Depends on: gc boost gsl gtkmm intltool libxslt popt poppler lcms2 imagemagick
description="An open source SVG editor."
url="http://www.inkscape.org"
maintainer="Danny Rawlins, crux at romster dot me"
packager="Huynh Ngoc Chau Tran, tran dot huynh at laposte dot net, tnut at nutyx dot org"

name=inkscape
version=0.92
release=1
source=( https://launchpad.net/inkscape/${version}.x/${version}/+download/inkscape-${version}.tar.bz2)

build() {
cd $name-$version
IMAGEMAGICK_CFLAGS=-I/usr/include/ImageMagick-6 \
IMAGEMAGICK_LIBS="-lMagickCore-6.Q16HDRI -lMagick++-6.Q16HDRI -lMagickWand-6.Q16HDRI" \
./configure --prefix=/usr
make
make DESTDIR=$PKG install
}
