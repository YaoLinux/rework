# Depends on: git cmake boost qt-base qt-x11extras qt-tools qjson sparsehash xorg-mesa libcdio libmtp protobuf qca taglib chromaprint glew gstreamer1 gstreamer1-plugins-base gstreamer1-plugins-good gstreamer1-plugins-ugly gstreamer1-plugins-ffmpeg gstreamer1-plugins-bad gvfs crypto++

description="A music player and library organizer"
url="http://www.clementine-player.org/"
packager="pierre at nutyx dot org"

run=(gstreamer1-plugins-base gstreamer1-plugins-good gstreamer1-plugins-ugly gstreamer1-plugins-ffmpeg gstreamer1-plugins-bad gvfs)

name=clementine
version=1.3.1
release=1

build() {
   git clone -b qt5  https://github.com/clementine-player/Clementine.git
   cd Clementine

   mkdir build
   cd    build

   cmake .. \
      -DCMAKE_INSTALL_PREFIX=/usr  \
      -DCMAKE_BUILD_TYPE='Release' \
      -Wno-dev
   make
   make DESTDIR=$PKG install
}
