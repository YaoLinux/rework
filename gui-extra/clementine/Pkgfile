# Depends on: cmake boost qt4 libechonest qjson sparsehash mesa libcdio libmtp protobuf qca taglib chromaprint glew gstreamer1 gstreamer1-plugins-base gstreamer1-plugins-good gstreamer1-plugins-ugly gstreamer1-plugins-bad gvfs crypto++

description="A music player and library organizer"
url="http://www.clementine-player.org/"
packager="pierre at nutyx dot org"

run=(gstreamer1-plugins-base gstreamer1-plugins-good gstreamer1-plugins-ugly gstreamer1-plugins-bad gvfs)

name=clementine
version=1.3.1
release=1

source=( ded3126.patch e31278.patch
	https://github.com/clementine-player/Clementine/archive/$version.tar.gz)

build() {
   
#   git clone -b qt5  https://github.com/clementine-player/Clementine.git
   cd Clementine-$version

   patch -Np1 -i ../ded3126.patch
   patch -Np1 -i ../e31278.patch

   mkdir build
   cd    build

   cmake .. \
      -DCMAKE_INSTALL_PREFIX=/usr  \
      -DCMAKE_BUILD_TYPE='Release'
   make -j1
   make DESTDIR=$PKG install
}
