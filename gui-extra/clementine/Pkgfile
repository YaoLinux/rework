# Depends on: cmake boost crypto++ libechonest qt4 qjson sparsehash mesa libcdio libmtp protobuf qca taglib chromaprint glew gstreamer1 gstreamer1-plugins-base gstreamer1-plugins-good gstreamer1-plugins-ugly gstreamer1-plugins-ffmpeg gstreamer1-plugins-bad gvfs

description="A music player and library organizer."
url="http://www.clementine-player.org/"
packager="Chris Farrell, timcowchip at gmail dot com"
maintainer="Danny Rawlins, crux at romster dot me"

run=(gstreamer-plugins-base gstreamer-plugins-good gstreamer-plugins-ugly gstreamer-plugins-ffmpeg gstreamer-plugins-bad gvfs)
name=clementine
version=1.3.1
release=1

source=(https://github.com/clementine-player/Clementine/archive/$version.tar.gz)

build() {
CXXFLAGS+=' -std=gnu++98'
cd Clementine-$version

mkdir build
cd    build

cmake .. \
   -DCMAKE_INSTALL_PREFIX=/usr \
   -DCMAKE_BUILD_TYPE='Release'
make
make DESTDIR=$PKG install
}
