# Depends on: ffmpeg jansson xorg-libxinerama libxkbcommon qt-x11extras curl jack gtk-update-icon-cache cmake fdk-aac xorg-libxcomposite x264

description="Free, open source software for live streaming and recording"
url="https://obsproject.com"
packager="SipoMatadorduCosmos"

name=obs-studio
version=18.0.2
release=1

source=(https://github.com/jp9000/obs-studio/archive/$version.tar.gz)

build() {
cd $name-$version
mkdir -p build; cd build
cmake -DCMAKE_INSTALL_PREFIX="/usr" \
-DOBS_VERSION_OVERRIDE="$version-$release" ..
make
make DESTDIR=$PKG install
}
